{
    "compilerOptions": {
        "noEmit": true,
        "sourceMap": true,
        "target": "es2020",
        "module": "es2015",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "preserveConstEnums": true
    },
    "exclude": ["node_modules", "**/*.test.ts"]
}
